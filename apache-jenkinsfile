pipeline{
    agent any
    options{
        timestamps()
    }
    environment{
        buildID = "$BUILD_ID"
    }
    stages{
        stage("Docker image creation - Apache HTTP Server"){
            steps{
                sh "docker build apache.Dockerfile -t my-apacheserver:$buildID"
            }
            post{
                success{
                    echo "Docker image Apache Server created successfully ..!"
                }
            }
        }
    }
}