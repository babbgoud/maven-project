pipeline{
    agent any
    tools{
        maven 'localMaven'
    }
    stages{
        stage('Build'){
            steps{
                echo 'Build started...'
                sh 'mvn clean package'
            }
            post{
                success{
                    echo 'Now Archiving ...'
                    archiveArtifacts artifacts: '**/target/*.war'
                }
            }
        }
        stage{
            steps{
                sh 'docker build . -t tomcatsamplewebapp:${env.BUILD_ID}'
            }
        }
    }
}